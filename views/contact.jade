extends ./layout.jade

block content

  //- img.img-rounded(src='/images/lasers.jpg', alt='Lasers', width='350', align='right')
  h1 Contact Us
  p  Please contact us if you have any questions or concerns!
  form.form-horizontal(role='form', method='', action='')
      .form-group
        label.col-sm-2.control-label(for='name') Name
        .col-sm-9
          input#name.form-control(type='text', name='name', placeholder='First & Last Name', value="")
      .form-group
        label.col-sm-2.control-label(for='email') Email
        .col-sm-9
          input#email.form-control(type='email', name='email', placeholder='example@domain.com', value="")
      .form-group
        label.col-sm-2.control-label(for='message') Message
        .col-sm-9
          textarea.form-control(rows='4', name='message')
      .form-group
        label.col-sm-2.control-label(for='human') 2 + 3 = ?
        .col-sm-9
          input#human.form-control(type='text', name='human', placeholder='Your Answer')
      .form-group
        .col-sm-9.col-sm-offset-2
          input#submit.btn.btn-primary(name='submit', type='submit', value='Send')
      .form-group
        .col-sm-9.col-sm-offset-2
  include includes/foot.jade
